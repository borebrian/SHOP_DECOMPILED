@model SHOP.Models.log_in

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">

    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <div class="card w3-card bg-white  text-center ">
            <div class="card-header text-center text-white border-0" style="        background-color: #15BADF
">
                @*<img src="/icons/log_in.png" class="image_for_login " />*@
                <i class="fa fa-user-circle-o" aria-hidden="true"></i>&nbsp; Please sign up to proceed
            </div>
            <div class="card-body pb-0">
                <form asp-action="Create" asp-controller="log_in">
                    @if (@TempData["Error"] != null)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <div class="alert alert-danger" style="font-size:10px;">
                                    <strong>Failed</strong>&nbsp;&nbsp;&nbsp;@TempData["Error"]
                                </div>
                            </div>
                        </div>

                    }

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @*<label asp-for="Full_name" class="control-label"></label>*@
                        <input asp-for="Full_name" class="form-control" id="name_owner" />

                    </div>
                    <div class="form-group">
                        @*<label asp-for="Shop_name" class="control-label"></label>*@
                        <input asp-for="Shop_name" id="shop_name" type="text" class="form-control" />

                    </div>
                    <div class="form-group">
                        @*<label asp-for="Phone" class="control-label"></label>*@
                        <input asp-for="Phone" value="07" maxlength="10" class="form-control" />

                    </div>
                    <div class="form-group">
                        @*<label asp-for="Password" class="control-label"></label>*@
                        <input asp-for="Password" placeholder="Password" maxlength="8" class="form-control" />

                    </div>

                    <div class="form-group" hidden>
                        @*<label asp-for="strRole" class="control-label" hidden></label>*@
                        <input asp-for="strRole" value="1" class="form-control" hidden />

                    </div>


                    @*<div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" maxlength="10" value="07" class="form-control" />*@

                    @*</div>*@
                    @*<div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" maxlength="14" class="form-control" />

        </div>*@

                    <div class="form-group">
                        <table class="table">
                            <tr>
                                <td class="text-center" style="border:none;">

                                    <button class="btn btn-light w3-card" type="submit">Submit&nbsp;<i class="fa fa-unlock-alt" aria-hidden="true"></i></button>
                                </td>
                            </tr>
                        </table>
                    </div>
                </form>




            </div>

        </div>
    </div>
    <div class="col-md-4">
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
